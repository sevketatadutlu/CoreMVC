@model ListProductAndCategoryPageVm

<h1>Category List <a asp-controller="Category" asp-action="CreateCategory">click for creating a new category</a> </h1>

<table class="table table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Category item in Model.Categories)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td> <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning">Update</a>   </td>
                <td>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<h1>Product List <a asp-controller="Product" asp-action="CreateProduct">click for creating a new product</a> </h1>

<table class="table table-hover">

    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>

    <tbody>

        @foreach (Product item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                @if (item.Category == null)
                {
                    <td>This product does not have a category</td>
                }
                else
                {
                    <td>@item.Category.CategoryName</td>
                }

                <td> <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-warning">Update</a>   </td>
                <td>
                    <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }



    </tbody>
</table>